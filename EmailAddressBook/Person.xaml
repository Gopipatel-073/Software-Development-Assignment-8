<Window x:Class="EmailAddressBook.Person"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailAddressBook"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Person" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Foreground="#FF00AADE" FontSize="18">Name:</Label>
            <Label Foreground="#FF00AADE" FontSize="18">Email:</Label>
            <Label Foreground="#FF00AADE" FontSize="18">Phone:</Label>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Label FontSize="18" Content="{Binding Name}"></Label>
            <Label FontSize="18" Content="{Binding Email}"></Label>
            <Label FontSize="18" Content="{Binding Phone}"></Label>
        </StackPanel>
    </Grid>
</Window>
